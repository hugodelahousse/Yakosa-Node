{
   "compilerOptions": {
      "lib": ["es2017"],
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "baseUrl": "src",
      "paths": {
         "@entities/*": ["entities/*"],
         "@utils/*": ["utils/*"]
      }
   }
}